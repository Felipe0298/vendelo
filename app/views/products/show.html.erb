<%= image_tag @product.photo, width: 200 if @product.photo.attached? %>

<h1 class="title"> <%= @product.title %> </h1>
<h4 class="description"> <%= @product.description%> </h3>
<p class="price">El precio es de $<%= @product.price%></p>

<%= link_to "Editar producto", edit_product_path(@product) if @product.user == Current.user %>
<%= link_to "Eliminar producto", product_path(@product), data:{
turbo_method: :delete,
turbo_confirm:t("common.confirm")
} if @product.user == Current.user%>